#include <graphics.h>
#include <conio.h>

int main() {
    int gd = DETECT, gm;
    initgraph(&gd, &gm, "");

    setfillstyle(SOLID_FILL, BLUE);  // Set fill style to solid blue
    floodfill(300, 200, WHITE);      // Fill the circle with blue color

    circle(300, 200, 50);  // Draw a circle at (300, 200) with radius 50

    getch();
    closegraph();
    return 0;
}
