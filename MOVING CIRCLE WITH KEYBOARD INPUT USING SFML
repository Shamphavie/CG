#include <SFML/Graphics.hpp>

int main() {
    // Create a window with title and size
    sf::RenderWindow window(sf::VideoMode(800, 600), "SFML Moving Circle");

    // Create a circle with radius 30
    sf::CircleShape circle(30);
    circle.setFillColor(sf::Color::Red);
    circle.setPosition(400, 300);

    // Set the speed of movement
    float speed = 5.0f;

    // Main loop to keep the window open
    while (window.isOpen()) {
        sf::Event event;
        while (window.pollEvent(event)) {
            if (event.type == sf::Event::Closed) {
                window.close();
            }
        }

        // Move the circle based on keyboard input
        if (sf::Keyboard::isKeyPressed(sf::Keyboard::Left)) {
            circle.move(-speed, 0);
        }
        if (sf::Keyboard::isKeyPressed(sf::Keyboard::Right)) {
            circle.move(speed, 0);
        }
        if (sf::Keyboard::isKeyPressed(sf::Keyboard::Up)) {
            circle.move(0, -speed);
        }
        if (sf::Keyboard::isKeyPressed(sf::Keyboard::Down)) {
            circle.move(0, speed);
        }

        // Clear the window, draw the circle, and display everything
        window.clear();
        window.draw(circle);
        window.display();
    }

    return 0;
}
